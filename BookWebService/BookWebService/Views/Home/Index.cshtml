<div class="row">
    <div class="col-md-12">
        <br />
        <a id="showAddBook" class="btn btn-default">Добавить книгу</a>
        <hr />
        <h3>Перечень доступных книг</h3>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div id="tableBlock"></div>


        <div class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" id="ModalForm" aria-labelledby="mySmallModalLabel">
            <div class="modal-dialog modal-sm" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="exampleModalLabel"><b id="captionHeader"></b></h4>
                    </div>
                    <div class="modal-body">
                        <div id="editBlock">
                            <form>
                                <input type="hidden" id="editId" />
                                <div class="form-group">
                                    <label for="editName">Название:</label>
                                    <input type="text" class="form-control" id="editName" placeholder="Введите название книги">
                                </div>

                                <div class="form-group">
                                    <label for="editAuthor">Автор:</label>
                                    <input type="text" class="form-control" id="editAuthor" placeholder="Введите автора">
                                </div>

                                <div class="form-group">
                                    <label for="editYear">Год:</label>
                                    <input type="number" class="form-control" id="editYear" placeholder="Введите год издания">
                                </div>
                                <button class="btn btn-primary btn-xs" id="editBook">Сохранить</button>
                            </form>
                        </div>

                        <div id="createBlock">
                            <form>

                                <div class="form-group">
                                    <label for="addName">Название:</label>
                                    <input type="text" class="form-control" id="addName" placeholder="Введите название книги">
                                </div>

                                <div class="form-group">
                                    <label for="addAuthor">Автор:</label>
                                    <input type="text" class="form-control" id="addAuthor" placeholder="Введите автора">
                                </div>

                                <div class="form-group">
                                    <label for="addYear">Год:</label>
                                    <input type="number" class="form-control" id="addYear" placeholder="Введите год издания">
                                </div>
                                <button class="btn btn-primary btn-xs" id="addBook">Сохранить</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>




    </div>

</div>

@section Scripts {
    @Scripts.Render("~/scripts/Core.js")
}